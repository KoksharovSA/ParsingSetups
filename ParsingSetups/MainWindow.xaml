<Window x:Class="ParsingSetups.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParsingSetups"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Grid.Row="2" Content="Добавить план наладки" HorizontalAlignment="Right" VerticalAlignment="Center" Width="194" Click="Button_Click" Height="20" Margin="0,0,5,0"/>
            <GroupBox x:Name="GroupBoxSetup" Grid.Column="1" Header="GroupBox" HorizontalAlignment="Left" Height="350" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="572">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="DirSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="MaterialSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="SizeSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="TimeSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="NumberOfRunsSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="WastePercentageSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="WasteSMSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <TextBlock x:Name="BusinessWasteSetup" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268"/>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock HorizontalAlignment="Left" Margin="0,4,5,0" TextWrapping="Wrap" Text="Дата внесения" VerticalAlignment="Top" Width="100" FontWeight="Bold" />
                            <DatePicker Name="DateSpellingSetup" Width="150" BorderBrush="{x:Null}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock HorizontalAlignment="Left" Margin="0,4,5,0" TextWrapping="Wrap" Text="Дата работы" VerticalAlignment="Top" Width="100" FontWeight="Bold" />
                            <DatePicker Name="DateRunSetupp" Width="150" BorderBrush="{x:Null}"/>
                        </StackPanel>
                    </StackPanel>
                    <ListBox x:Name="DetailListBoxSetup" Width="280" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top"/>
                </StackPanel>
                
            </GroupBox>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
            <TreeView x:Name="TreeViewSetups" HorizontalAlignment="Right" Height="322" Margin="0,38,10,0" Grid.Row="1" VerticalAlignment="Top" Width="180"/>
        </Grid>
    </Grid>
</Window>
